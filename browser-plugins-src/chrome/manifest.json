{
  "name": "My Second Brain",
  "version": "1.0",
  "description": "Read, Organize, Marking and Sharing with your friends",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html",
    "default_title": "My Second Brain!"
  }, 
  "permissions": [
    "bookmarks", "tabs", "unlimitedStorage", "ttsEngine","tts", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["jquery.min.js","core.js","app.js"]
    }
  ],
  "tts_engine": {
    "voices": [
      {
        "voice_name": "Alice",
        "lang": "en-US",
        "gender": "female",
        "event_types": ["start", "marker", "end"]
      },
      {
        "voice_name": "Pat",
        "lang": "en-US",
        "event_types": ["end"]
      }
    ]
  }
}